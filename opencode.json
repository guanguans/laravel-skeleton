{
    "$schema": "https://opencode.ai/config.json",
    "theme": "opencode",
    "provider": {
        "github-models": {
            "name": "GitHub Models",
            "models": {
                "claude-sonnet-4": {
                    "name": "Claude Sonnet 4"
                },
                "o4-mini": {
                    "name": "O4 Mini"
                }
            }
        },
        "github-copilot": {
            "name": "GitHub Copilot",
            "models": {
                "claude-sonnet-4": {
                    "name": "Claude Sonnet 4"
                },
                "o4-mini": {
                    "name": "O4 Mini"
                }
            }
        }
    },
    "model": "github-copilot/claude-sonnet-4",
    "small_model": "github-copilot/o4-mini",
    "autoupdate": true,
    "mcp": {
        "context7": {
            "type": "remote",
            "url": "https://mcp.context7.com/sse"
        },
        "weather": {
            "type": "local",
            "command": [
                "opencode",
                "x",
                "@h1deya/mcp-server-weather"
            ]
        }
    }
}

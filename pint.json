{
    "preset": "laravel",
    "rules": {
        "blank_line_between_import_groups": false,
        "braces_position": {
            "allow_single_line_anonymous_functions": false,
            "allow_single_line_empty_anonymous_classes": false,
            "anonymous_classes_opening_brace": "same_line",
            "anonymous_functions_opening_brace": "same_line",
            "classes_opening_brace": "next_line_unless_newline_at_signature_end",
            "control_structures_opening_brace": "same_line",
            "functions_opening_brace": "next_line_unless_newline_at_signature_end"
        },
        "class_attributes_separation": {
            "elements": {
                "case": "only_if_meta",
                "const": "only_if_meta",
                "method": "one",
                "property": "only_if_meta",
                "trait_import": "none"
            }
        },
        "class_definition": {
            "inline_constructor_arguments": false,
            "multi_line_extends_each_single_line": false,
            "single_item_single_line": false,
            "single_line": false,
            "space_before_parenthesis": false
        },
        "header_comment": {
            "comment_type": "PHPDoc",
            "header": "Copyright (c) 2021-2025 guanguans<ityaozm@gmail.com>\n\nFor the full copyright and license information, please view\nthe LICENSE file that was distributed with this source code.\n\n@see https://github.com/guanguans/laravel-skeleton",
            "location": "after_declare_strict",
            "separate": "both"
        },
        "increment_style": {
            "style": "pre"
        },
        "not_operator_with_successor_space": false,
        "ordered_traits": {
            "case_sensitive": true
        },
        "php_unit_method_casing": {
            "case": "camel_case"
        },
        "phpdoc_align": {
            "align": "left",
            "spacing": 1,
            "tags": [
                "method",
                "param",
                "property",
                "property-read",
                "property-write",
                "return",
                "throws",
                "type",
                "var"
            ]
        },
        "phpdoc_order": {
            "order": [
                "noinspection",
                "phan-suppress",
                "phpcsSuppress",
                "phpstan-ignore",
                "psalm-suppress",
                "deprecated",
                "internal",
                "covers",
                "uses",
                "dataProvider",
                "param",
                "throws",
                "return"
            ]
        },
        "phpdoc_separation": {
            "groups": [
                [
                    "deprecated"
                ],
                [
                    "link",
                    "see",
                    "since"
                ],
                [
                    "author",
                    "copyright",
                    "license"
                ],
                [
                    "category",
                    "package",
                    "subpackage"
                ],
                [
                    "property",
                    "property-read",
                    "property-write"
                ]
            ],
            "skip_unlisted_annotations": false
        },
        "yoda_style": {
            "always_move_variable": true,
            "equal": true,
            "identical": true,
            "less_and_greater": true
        }
    },
    "cache-file": ".build/pint/.pint.cache",
    "exclude": [
        ".build/",
        ".github/",
        "baselines/",
        "node_modules/",
        "storage/",
        "stubs/",
        "vendor/",
        "vendor-bin/"
    ],
    "notPath": [
        "foo/bar.php"
    ],
    "notName": [
        "*.blade.php",
        ".phpstorm.meta.php",
        "_ide_helper.php",
        "_ide_helper_actions.php",
        "_ide_helper_models.php"
    ]
}
